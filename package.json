{
  "name": "moleculer-db-adapter-macrometa",
  "version": "0.0.0",
  "description": "MacroMeta.io DB adapter for Moleculer DB service.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon examples/index.js",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint --ext=.js src test",
    "deps": "npm-check -u",
    "coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "keywords": [
    "moleculer",
    "microservice"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/moleculerjs/moleculer-db-adapter-macrometa.git"
  },
  "author": "MoleculerJS",
  "license": "MIT",
  "peerDependencies": {
    "moleculer": "^0.13.0 || ^0.14.0"
  },
  "dependencies": {
    "jsc8": "^0.14.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "benchmarkify": "^2.1.2",
    "coveralls": "^3.0.8",
    "eslint": "^6.7.1",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "lolex": "^5.1.1",
    "moleculer": "^0.13.0",
    "moleculer-db": "^0.8.4",
    "moleculer-docgen": "^0.2.2",
    "moleculer-repl": "^0.6.1",
    "nodemon": "^2.0.1",
    "npm-check": "5.9.0"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": "./src",
    "roots": [
      "../test"
    ],
    "coverageDirectory": "../coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/services/"
    ]
  },
  "engines": {
    "node": ">= 8.x.x"
  }
}
